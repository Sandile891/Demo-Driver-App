{
  "id": "/PutcoBusApp",
  "name": "Putco Bus App",
  "short_name": "Putco App",
  "description": "An app to live track buses, purchase e-tickets, and manage trips.",
  "start_url": "https://sandile891.github.io/Putco-Bus-App/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#ffffff",
  "theme_color": "#008000",
  "icons": [
    {
      "src": "/ic.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/email?to=mnisisandile16@gmail.com"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Buy Tickets",
      "short_name": "Tickets",
      "description": "Quick access to ticket purchase",
      "url": "/Buy trips.html",
      "icons": [
        {
          "src": "/images/ticket-icon.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Bus",
      "short_name": "Track",
      "description": "Track your bus in real-time",
      "url": "/Live tracking.html",
      "icons": [
        {
          "src": "ic.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ]
}

